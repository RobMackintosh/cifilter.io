platform :ios, '13.0'
workspace 'CIFilter.io'
project 'CIFilter.io.xcodeproj'

source 'https://github.com/CocoaPods/Specs'

use_frameworks!

def shared_pods
  pod 'ReactiveLists', '~> 0.3.0'
  pod 'YLTableView', '~> 2.2.0', :modular_headers => true
  pod 'AloeStackView', '~> 1.0.1'
  pod 'RxAtomic', '~> 4.4.0', :modular_headers => true
  pod 'RxSwift', :git => 'https://github.com/noahsark769/RxSwift', :branch => 'uikitformac-compat', :modular_headers => true
  pod 'RxCocoa', :git => 'https://github.com/noahsark769/RxSwift', :branch => 'uikitformac-compat', :modular_headers => true
  pod 'RxGesture', '~> 3.0.0', :modular_headers => true
  pod 'IQKeyboardManagerSwift', '~> 6.2.0'
  pod 'Sentry', '~> 4.3.1', :modular_headers => true

  # TODO(UIKitForMac): Need to find some way to re-enable this for Mixpanel supported platforms (aka iOS)
  # pod 'Mixpanel-swift', '~> 2.5.9'
end

target 'CIFilter.io' do
  plugin 'cocoapods-keys', {
    :project => "CIFilter.io",
    :keys => [
      "SENTRY_DSN"
    ]}

  shared_pods
end

target 'CIFilter.ioTests' do
  shared_pods
end
